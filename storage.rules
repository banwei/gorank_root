rules_version = '2';

// Secure Firebase Storage Rules for GoRank - Private with Authentication
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile Images - Authenticated Access Only
    match /profile_images/{imageId} {
      // Allow authenticated users to read profile images
      allow read: if request.auth != null;
      
      // Allow authenticated users to upload their own profile images
      // The imageId must start with their Firebase Auth UID
      allow write: if request.auth != null 
                   && imageId.matches('^' + request.auth.uid + '_.*');
    }
    
    // Private folder - Authenticated users only
    match /private/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
